@page
@model ac.app.Pages.Divisions.DeleteModel
@{
}
<div class="card bg-primary">
    <div class="card-header text-white">
        <a class="text-white" asp-page="./Index"><i class="fas fa-angle-left"></i></a>
        &nbsp;Deleting a Division
    </div>
    <div class="card-body bg-white">
        <p>Are you sure you want to delete this?</p>
        <div>
            <h4>Division</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Division.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Division.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Division.Company.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Division.Company.Name)
                </dd>
            </dl>

            <form method="post">
                <input type="hidden" asp-for="Division.Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> <a asp-page="Index"
                    class="btn btn-default">Cancel</a>
            </form>
        </div>
    </div>
</div>
