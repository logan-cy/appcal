@page
@model ac.app.Pages.ProductSets.DeleteModel
@{
}
<div class="text-center">
    <h1 class="display-4">
        <a href="http://healthimpact.health/" target="_blank">
            <img src="/img/hi-logo.png"
                 alt="Health Impact" />
        </a>
    </h1>
</div>
<div class="card bg-primary">
    <div class="card-header text-white">
        <a class="text-white" asp-page="./Index"><i class="fas fa-angle-left"></i></a>
        &nbsp;Deleting a Product Set
    </div>
    <div class="card-body bg-white">
        <p>Are you sure you want to delete this?</p>
        <div>
            <h4>Product Set</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProductSet.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductSet.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProductSet.Company)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductSet.Company.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProductSet.Division)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductSet.Division.Name)
                </dd>
                <dt class="col-sm-2">
                    Products
                </dt>
                <dd class="col-sm-10">
                    @foreach (var product in Model.ProductSet.Products)
                    {
                        <span>@product.Name</span><br />
                    }
                </dd>
            </dl>

            <form method="post">
                <input type="hidden" asp-for="ProductSet.Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> <a asp-page="Index" class="btn btn-default">Cancel</a>
            </form>
        </div>
    </div>
</div>