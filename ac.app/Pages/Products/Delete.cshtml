@page
@model ac.app.Pages.Products.DeleteModel
@{
}
<div class="text-center">
    <h1 class="display-4">
        <a href="http://healthimpact.health/" target="_blank">
            <img src="/img/hi-logo.png"
                 alt="Health Impact" />
        </a>
    </h1>
</div>
<div class="card bg-primary">
    <div class="card-header text-white">
        <a class="text-white" asp-page="./Index"><i class="fas fa-angle-left"></i></a>
        &nbsp;Deleting a Product
    </div>
    <div class="card-body bg-white">
        <p>Are you sure you want to delete this?</p>
        <div>
            <h4>Product</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.Company.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.Division)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.Division.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.Price)
                </dt>
                <dd class="col-sm-10">
                    @{ 
                        var price = Model.Product.Price.ToString("c");
                    }
                    @Html.DisplayFor(model => price)
                </dd>
            </dl>

            <form method="post">
                <input type="hidden" asp-for="Product.Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> <a asp-page="Index" class="btn btn-default">Cancel</a>
            </form>
        </div>
    </div>
</div>